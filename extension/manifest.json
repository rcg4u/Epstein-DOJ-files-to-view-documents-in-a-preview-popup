{
  "manifest_version": 3,
  "name": "Epstein Files DOJ view helper",
  "version": "0.2.0",
  "description": "Auto-clicks DOJ age verification and detects CAPTCHA presence.",
  "host_permissions": ["https://www.justice.gov/*", "https://jmail.world/*"],
  "permissions": ["storage", "tabs"],
  "background": { "service_worker": "background.js" },
  "action": { "default_title": "Epstein Files DOJ view helper", "default_popup": "popup.html" },
  "content_scripts": [
    {
      "matches": ["https://www.justice.gov/*", "https://jmail.world/*"],
      "js": ["snl_bootstrap.js", "snl_auth.js", "snl_preview.js", "snl_hover.js"],
      "run_at": "document_idle"
    }
  ]
}
